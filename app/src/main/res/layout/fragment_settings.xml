<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SettingsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:paddingTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="MODEL"
            android:background="?attr/colorSurfaceVariant"
            android:textAppearance="@style/TextAppearance.SmileyFontHeadline6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|start"
                    android:spinnerMode="dropdown" />

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="model"
                android:textColor="?attr/colorOnBackground"
                android:enabled="false"
                android:textAlignment="center"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textAppearance="@style/TextAppearance.SmileyFontCaption"
                android:layout_marginEnd="8dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mode_path_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="98"
                android:text="sssss"
                android:enabled="false"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/choose_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:icon="@drawable/folder_icon34"
                app:iconGravity="textStart"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.SmileyFontCaption"
                android:enabled="false"/>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="dict"
                android:textColor="?attr/colorOnBackground"
                android:enabled="false"
                android:textAlignment="center"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textAppearance="@style/TextAppearance.SmileyFontCaption"
                android:layout_marginEnd="8dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dict_path_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="99"
                android:text="sssssss"
                android:enabled="false"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/choose_dict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:icon="@drawable/folder_icon34"
                app:iconGravity="textStart"
                android:layout_gravity="center"
                android:enabled="false"
                android:textAppearance="@style/TextAppearance.SmileyFontCaption"/>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:paddingTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="SAVE MODE"
            android:background="?attr/colorSurfaceVariant"
            android:textAppearance="@style/TextAppearance.SmileyFontHeadline6"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/save_voice_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            android:checked="false"
            android:text="Text+Time+Voice" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/save_time_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            android:checked="false"
            android:text="Text+Time" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/save_text_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            android:checked="false"
            android:text="Text" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</FrameLayout>